<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <!-- Title -->
    <TextView
        android:id="@+id/generateReportsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Reports"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Report Buttons -->
    <Button
        android:id="@+id/passAllCoursesSemesterBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pass All Courses in a Semester"
        android:textColor="#FFFFFF"
        app:backgroundTint="#CDDC39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/generateReportsTitle"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/passAllCoursesYearBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pass All Courses in a Year"
        android:textColor="#FFFFFF"
        app:backgroundTint="#CDDC39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passAllCoursesSemesterBtn"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/failCoursesSemesterBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Failed Courses in a Semester"
        android:textColor="#FFFFFF"
        app:backgroundTint="#CDDC39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passAllCoursesYearBtn"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/failCoursesYearBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Failed Courses in a Year"
        android:textColor="#FFFFFF"
        app:backgroundTint="#CDDC39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/failCoursesSemesterBtn"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/specialCasesBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Special Cases"
        android:textColor="#FFFFFF"
        app:backgroundTint="#CDDC39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/failCoursesYearBtn"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/missingMarksBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Students with Missing Marks"
        android:textColor="#FFFFFF"
        app:backgroundTint="#CDDC39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/specialCasesBtn"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/missingAllMarksBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Students Missing All Marks"
        android:textColor="#FFFFFF"
        app:backgroundTint="#CDDC39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/missingMarksBtn"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/secondAttemptBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Students Attempting a Course for the Second Time"
        android:textColor="#FFFFFF"
        app:backgroundTint="#CDDC39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/missingAllMarksBtn"
        android:layout_marginEnd="16dp"/>

    <!-- Admin Logout Button -->
    <Button
        android:id="@+id/generateReportsLogoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Admin Logout"
        android:textColor="#000000"
        app:backgroundTint="#CDDC39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondAttemptBtn"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
