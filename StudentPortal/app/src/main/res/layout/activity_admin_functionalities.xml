<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AdminFunctionalitiesActivity">

    <!-- Admin Functionalities Welcome Text -->
    <TextView
        android:id="@+id/adminFunctionalitiesWelcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Functionalities"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center"/>

    <!-- Generate Reports Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/generateReportsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminFunctionalitiesWelcomeText"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#CDDC39"
        android:text="Generate Reports"
        android:textColor="#000000"
        android:layout_marginTop="20dp"/>

    <!-- Edit Marks Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/editMarksBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/generateReportsBtn"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#CDDC39"
        android:text="Edit Marks"
        android:textColor="#000000"
        android:layout_marginTop="20dp"/>

    <!-- Admin Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/adminFunctionalitiesLogoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editMarksBtn"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#CDDC39"
        android:text="Admin Logout"
        android:textColor="#000000"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
