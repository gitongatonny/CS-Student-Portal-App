<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ViewMarksActivity">

    <!-- View Marks Title Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewMarksTitle"
        android:text="View Marks"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center"/>

    <!-- Marks List -->
    <ListView
        android:id="@+id/marksListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewMarksTitle"
        android:layout_margin="20dp"
        android:background="#30ffffff"
        android:padding="10dp"
        android:textColor="@color/white"/>

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backToPortalBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/marksListView"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#CDDC39"
        android:text="Back to Portal"
        android:textColor="#000000"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
