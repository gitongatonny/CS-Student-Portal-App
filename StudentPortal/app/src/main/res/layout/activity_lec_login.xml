<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LecLoginActivity"
    android:background="@drawable/background"
    >

    <!-- Sign in Text -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lecSigninText"
        android:text="Lecturer Sign-in"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center"/>


    <!-- Email -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lecEmail"
        android:layout_below="@id/lecSigninText"
        android:background="#30ffffff"
        android:hint="Email Address"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableStart="@drawable/email_white_icon"
        android:drawablePadding="20dp"
        android:inputType="textEmailAddress"
        android:autofillHints="emailAddress" />


    <!-- Password -->

    <EditText
        android:id="@+id/lecPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lecEmail"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawableStart="@drawable/pass_white_icon"
        android:drawablePadding="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:autofillHints="password" />

    <!-- Login Button -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lecSiginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lecPass"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#CDDC39"
        android:text="Login"
        android:textColor="#000000" />


    <!-- Register Text -->
    <TextView
        android:id="@+id/lecSignupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lecSiginBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Don't have a portal account?"
        android:textColor="@color/white" />


    <!-- Register Button -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lecSignupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lecSignupText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0.2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#CDDC39"
        android:text="Register"
        android:textColor="#000000" />

</RelativeLayout>