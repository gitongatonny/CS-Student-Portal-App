<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".StudentLandingActivity">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentLandingText"
        android:text="Semester Registration"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center"/>


    <!-- Select Course Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentSelectCourse"
        android:layout_below="@id/studentLandingText"
        android:text="Register for your current semester"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_margin="30dp"
        android:gravity="center"/>


    <!-- Semester Spinner -->
    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/studentSelectCourse"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="#30ffffff"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:padding="14dp"/>


    <!-- Register Course Btn -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerCourseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categorySpinner"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#CDDC39"
        android:text="Register for your Semester"
        android:textColor="#000000"
        android:layout_marginTop="20dp"/>


    <!-- Student Logout Btn -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/studentLogoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerCourseBtn"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#CDDC39"
        android:text="Logout"
        android:textColor="#000000"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
