<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/editMarksTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Student Marks"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- Semester Dropdown -->
    <Spinner
        android:id="@+id/spinnerSemester"
        android:layout_below="@id/editMarksTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Unit Dropdown -->
    <Spinner
        android:id="@+id/spinnerUnit"
        android:layout_below="@id/spinnerSemester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Student Dropdown -->
    <Spinner
        android:id="@+id/spinnerStudent"
        android:layout_below="@id/spinnerUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Assignment 1 -->
    <EditText
        android:id="@+id/editTextAssignment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assignment 1"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/spinnerStudent"
        android:layout_marginTop="16dp"/>

    <!-- Assignment 2 -->
    <EditText
        android:id="@+id/editTextAssignment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assignment 2"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/editTextAssignment1"
        android:layout_marginTop="16dp"/>

    <!-- CAT 1 -->
    <EditText
        android:id="@+id/editTextCat1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CAT 1"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/editTextAssignment2"
        android:layout_marginTop="16dp"/>

    <!-- CAT 2 -->
    <EditText
        android:id="@+id/editTextCat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CAT 2"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/editTextCat1"
        android:layout_marginTop="16dp"/>

    <!-- Exam Score -->
    <EditText
        android:id="@+id/editTextExamScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Exam Score"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/editTextCat2"
        android:layout_marginTop="16dp"/>

    <!-- Save Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Marks"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@id/editTextExamScore"
        android:layout_marginTop="24dp"
        android:backgroundTint="#CDDC39"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>